{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text":"Resource requried (2016)","anchor":"middle"},
  "data": {
    "url": "https://raw.githubusercontent.com/YukiHareru/Vega-lite/main/data/countries.csv"
  },
  "vconcat": [
    {
      "width": 2000,
      "height": 300,
      "mark": "line",
      "encoding": {
        "x": {
          "field": "Country",
          "type": "nominal",
          "scale": {"domain": {"param": "brush"}},
          "axis": {"title": "", "grid": false}
        },
        "y": {
          "field": "CountriesRequired",
          "title": "Countries Required",
          "type": "quantitative"
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "CountriesRequired", "type": "quantitative"}
        ]
      }
    },
    {
      "width": 2000,
      "height": 300,
      "params": [
        {"name": "brush", "select": {"type": "interval", "encodings": ["x"]}}
      ],
      "mark": "line",
      "encoding": {
        "x": {"field": "Country", "type": "nominal"},
        "y": {
          "field": "EarthsRequired",
          "type": "quantitative",
          "title": "Earths Required"
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "EarthsRequired", "type": "quantitative"}
        ]
      }
    }
  ],
  "config": {"background": "#F3FAF9"}
}